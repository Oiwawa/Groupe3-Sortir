{% extends 'base.html.twig' %}

{% block title %}Sortir - ENI - Login{% endblock %}
{% block header %}
    <span></span>
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="my-5 d-flex justify-content-center">
                <div>
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">Les identifiants sont incorrects</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Bienvenue {{ app.user.username }}, <a
                                        href="{{ path('app_logout') }}">Se d√©connecter</a>
                            </div>
                        {% endif %}
                        <label for="inputUsername">Identifiant :</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                               class="form-control" required autofocus>
                        <label for="inputPassword">Mot de passe :</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">
                        <div class="checkbox mb-3">
                            <label for="_remember_me">Se souvenir de moi
                                <input type="checkbox" name="_remember_me">
                            </label>
                        </div>
                        <button class="btn btn-lg btn-primary" type="submit">
                            Connexion
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}{% endblock %}
