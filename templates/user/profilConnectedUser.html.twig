{% extends "base.html.twig" %}

{% block title %}Sortir - ENI - Profil {% endblock %}

{% block body %}
    {% form_theme userProfilForm 'bootstrap_4_layout.html.twig' %}
    <div class="container-fluid">
    <div class="row">
        <div class="my-5 d-flex justify-content-center">
            <h1>Mon profil</h1>
        </div>
        {% for status, messages in app.flashes %}
            {% for message in messages %}
                <div class="container-fluid">
                    <div class="row">
                        <div class="my-5 d-flex justify-content-center">
                            <div class="alert alert-{{ status }} alert-dismissible fade show" role="alert">
                                <strong>
                                    {{ message }}
                                </strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row d-flex justify-content-center">
            <div class="col-3 my-5">
                {{ form_start(userProfilForm) }}
                {{ form_row(userProfilForm.username) }}
                <br>
                {{ form_row(userProfilForm.firstName) }}
                <br>
                {{ form_row(userProfilForm.lastName) }}
                <br>
                {{ form_row(userProfilForm.phone) }}
            </div>
            <div class="col-3 my-5">
                {{ form_row(userProfilForm.mail) }}
                <br>
                {{ form_row(userProfilForm.password) }}
                <br>
                {{ form_row(userProfilForm.campus) }}
                <br>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-4 mx-auto d-flex justify-content-center">
                        <div class="me-4">
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </div>
                        <div class="mb-5">
                            <button type="reset" class="btn btn-secondary">Annuler</button>
                        </div>
                        <br>
                        {{ form_end(userProfilForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}