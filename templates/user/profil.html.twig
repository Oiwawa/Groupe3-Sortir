{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}
   {% block header %}
       <div class="container-fluid">
           <div class="row">
               <div class="my-5 d-flex col-md-4">
                   <h1>Sortir - ENI</h1>
               </div>
               <div class="col-md-4 offset-md-4">
                   <ul class="nav nav-pills">
                       {% if app.user.admin == true %}
                           <li class="nav-item">
                               <a class="nav-link" href="{{ url('admin_villes') }}">Villes</a>
                           </li>
                           <li class="nav-item">
                               <a class="nav-link" href="{{ url('admin_campus') }}">Campus</a>
                           </li>
                       {% endif %}
                       <li class="nav-item">
                           <a class="nav-link" href="{{ url('home_index') }}">Accueil</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link" href="{{ url('user_profil',{"username":app.user.username}) }}">Mon
                               profil</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link" href="{{ url('app_logout') }}">Se déconnecter</a>
                       </li>
                   </ul>
               </div>
           </div>
       </div>
   {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="my-5 d-flex justify-content-center">
                <h1>{{ user.username }}</h1>
            </div>
            <div class="my-5 d-flex justify-content-center">
            <p>Prénom : {{ user.firstName }}</p>
            <p>Nom : {{ user.lastName }}</p>
            <p>Téléphone : {{ user.phone }}</p>
            <p>Email : {{ user.mail }}</p>
{#            <p>Campus : {{ user.campus }}</p>#}
            </div>
        </div>
    </div>
{% endblock %}


