{% extends 'base.html.twig' %}

{% block title %}
    Sortir - ENI - Annuler
{% endblock %}
{% block body %}
    {% form_theme cancelForm 'bootstrap_4_layout.html.twig' %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-6 mx-auto text-center">
                <h1>Annuler une sortie</h1>
                <br>
                <div class="my-1">
                    <p>Nom de la sortie : {{ event.name }}</p>
                </div>
                <div class="my-1">
                    <p>Date de la sortie : {{ event.eventDate|date('d-m-Y') }}</p>
                </div>
                <div class="my-1">
                    <p>Campus : {{ event.campus.name }}</p>
                </div>
                <div class="my-1">
                    <p>Lieu : {{ event.place.name }}</p>
                </div>

                {{ form_start(cancelForm) }}
                <div class="row d-flex justify-content-center">
                    <div class="col-3 ">
                {{ form_row(cancelForm.cancelMotif) }}
                        <br>
                <button class="btn btn-secondary ms-3" type="button" data-dismiss="modal">
                    <a style="text-decoration: none; color: white" href="{{ url('event_detail', {'id':event.id}) }}">Annuler</a></button>
                <button class="btn btn-primary ms-2" type="button">
                    <a style="text-decoration: none; color: white"
                       href="{{ url('event_delete',{'id':event.id}) }}">Enregistrer</a>
                </button>
                {{ form_end(cancelForm) }}
            </div>
        </div>
    </div>
{% endblock %}

